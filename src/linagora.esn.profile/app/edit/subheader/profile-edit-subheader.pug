extends /modules/subheader/responsive-subheader.pug

block left
  button.btn.btn-link.hidden-xs(ui-sref="profile", ui-sref-opts="{location: 'replace'}")
    .flex-vertical-centered
      i.mdi.mdi-close.mdi-margin-right
      span {{ 'Cancel' | translate }}
  button.btn.btn-link.btn-icon.visible-xs(ui-sref="profile", ui-sref-opts="{location: 'replace'}")
    i.mdi.mdi-close
  span.title.extra-title.ellipsis {{ 'Edit Profile' | translate }}

block right
  button.btn.btn-link.hidden-xs(esn-submit='$ctrl.onSaveBtnClick()', ng-disabled="$ctrl.form.$pristine")
    .flex-vertical-centered
      span {{ 'Save' | translate }}
      i.mdi.mdi-check.mdi-margin-left
  button.btn.btn-link.btn-icon.visible-xs(esn-submit='$ctrl.onSaveBtnClick()', ng-disabled="$ctrl.form.$pristine")
    i.mdi.mdi-check
